<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <fragment
        android:id="@+id/map"
        android:layout_width="450dp"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        class="com.google.android.gms.maps.MapFragment" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="450dp"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp" />

    <GridLayout
        android:layout_width="450dp"
        android:layout_height="42dp"
        android:layout_gravity="top"
        android:background="#FFFFFF"
        android:columnCount="9"
        android:rowCount="2" >

        <TextView
            android:id="@+id/text"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_column="1"
            android:layout_gravity="right|top"
            android:layout_row="1"
            android:background="@drawable/pmicon" />

        <Button
            android:id="@+id/config"
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:layout_column="2"
            android:layout_gravity="top|left"
            android:layout_row="1"
            android:textSize="10dp"
            android:text="@string/persolalizar"
            android:onClick="Personalizar" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="20dp"
            android:drawSelectorOnTop="true" >
        </Spinner>

        <Button
            android:id="@+id/mancha"
            android:textSize="10dp"
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:layout_column="3"
            android:layout_gravity="bottom|left"
            android:layout_row="1"
            android:text="@string/mancha"

            android:onClick="Manch" />

        <Button
            android:id="@+id/help"
            android:textSize="10dp"
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:text="@string/ajuda"
            android:layout_gravity="bottom|left"

            android:onClick="Ajuda" />

        <Button
            android:id="@+id/ocorrencia"
            android:textSize="10dp"
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:text="@string/ocorrencia"

            android:onClick="Ocorrencia" />

        <TextView
            android:id="@+id/Dados"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_column="8"
            android:layout_gravity="right|top"
            android:layout_row="1" />
    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#A0FFFFFF"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/locinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <GridLayout
        android:layout_width="450dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="450dp"
        android:background="#979fb1" >
    </GridLayout>

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="450dp"
        android:background="#d3d3d3"
        android:text="@string/pontos_base"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="450dp"
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        android:textSize="40dp" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="450dp"
        android:layout_marginTop="25dp" >
    </ListView>


    <!-- não é necessario o ID 'logo' -=> android:id="@+id/logo" -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="450dp"
        android:layout_marginTop="180dp"
        android:background="#d3d3d3"
        android:text="@string/notificacoes"
        android:textColor="#000000"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/list2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="450dp"
        android:layout_marginTop="210dp" >
    </ListView>

    <TextView
        android:id="@+id/my_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="42dp" />

</RelativeLayout><!-- From: file:/C:/Users/Usuario/AndroidstudioProjects/CartaoPrograma2.0.0.4/app/src/main/res/layout/activity_main2.xml -->